<h2>Edit a Recipe</h2>

      <form action= "/recipes/<%=@recipe.id%>" method= "post">
      <input id="hidden" type="hidden" name="_method" value="PUT">

      <label for "name">Recipe Name: </label>
      <input type= "text" name="recipe[name]" value=<%= @recipe.name %>>
      <br>
      <label for "meal_type">Meal Type: </label>
      <input type= "text" name="recipe[meal_type]" value=<%= @recipe.meal_type %>>
      <br>
      <label for "main_ingrediant">Main Ingredient: </label>
      <input type= "text" name="recipe[main_ingrediant]" value=<%= @recipe.main_ingrediant %>>
      <br>
      <label for "instructions">Instructions: </label>
      <textarea name="recipe[instructions]" value=<%= @recipe.instructions %>></textarea>
      <br>
      <label for "notes">Notes: </label>
      <textarea name="recipe[notes]" value=<%= @recipe.notes %>></textarea>
      <br>
      <input type= "submit" value="Update">
      </form>
